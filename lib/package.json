    "peerDependencies": {
        "react": ">=17.0.0",
        "react-dom": ">=17.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "@package/eslint-config": "workspace:*",
        "@rollup/plugin-commonjs": "^28.0.2",
