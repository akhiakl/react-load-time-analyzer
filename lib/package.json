        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.2",
        "@types/node": "^22.13.4",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "eslint": "^9.20.1",
        "rimraf": "^6.0.1",
        "rollup": "^4.34.7",
        "tslib": "^2.8.1",
        "typescript": "^5.7.3"
